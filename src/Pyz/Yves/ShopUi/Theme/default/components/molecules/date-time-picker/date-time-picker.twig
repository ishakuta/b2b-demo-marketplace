{% extends model('component') %}

{% define config = {
    name: 'date-time-picker',
    tag: 'date-time-picker',
} %}

{% define data = {
    field: required,
    fieldClass: '',
    hasIcon: false,
} %}

{% define attributes = {
    'language': required,
    'parent-id': '.' ~ config.name,
    'config': '{}',
    'formatted-date-time': '',
    'date-from-id': false,
    'date-to-id': false,
} %}

{% block body %}
    <div class="{{ config.name }}__content">
        {% block input %}
            {{ form_row(data.field, {
                attr: {
                    class: config.name ~ '__field' ~ (data.fieldClass ? ' ' ~ data.fieldClass),
                },
            }) }}
        {% endblock %}

        {% block button %}
            <div class="{{ config.name }}__calendar">
                <button type="button" class="{{ config.name }}__calendar-button">
                    {% include atom('icon') with {
                        class: config.name ~ '__icon',
                        data: {
                            name: 'calendar',
                        },
                    } only %}
                </button>
                <input type="text" class="{{ config.name }}__flatpicker-input" data-id="{{ data.field.vars.id }}" tabindex="-1">
            </div>
        {% endblock %}
    </div>
{% endblock %}
